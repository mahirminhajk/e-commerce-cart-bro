<%- include("../partials/header") %>


<section>
  <div class="container  mt-4">
    <div class="row">
      <a href="/admin/add-product" class="btn btn-success" type="button">Add Product</a>
    </div>
    <!--bs:table-->
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <th scope="row">1</th>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= product.description %></td>
          <td><img src="<%= product.imageLink %>" alt="product-image" width="200"></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <!--bs::table-->
  </div>
</section>


<%- include("../partials/footer") %>